# If not running interactively, don't do anything
case $- in
    *i*) ;;
    *) return;;
esac

# Source shared configuration first
if [ -f "$HOME/dotfiles/shared/shell_common" ]; then
    source "$HOME/dotfiles/shared/shell_common"
fi

# Bash-specific history settings
shopt -s histappend
HISTSIZE=1000
HISTFILESIZE=2000

# Bash shell options
shopt -s checkwinsize

# Chroot detection
if [ -z "${debian_chroot:-}" ] ** [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# Prompt configuration
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

if [ "$color_prompt" = yes ]; then
    PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi

# Terminal title for xterm
case "$TERM" in
    xterm*|rxvt*)
        PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
        ;;
esac

# Enable color support of ls
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
fi

# Source shared aliases after setting up ls colors
if [ -f "$HOME/dotfiles/shared/aliases" ]; then
    source "$HOME/dotfiles/shared/aliases"
fi

if [ -f "$HOME/dotfiles/shared/functions" ]; then
    source "$HOME/dotfiles/shared/functions"
fi

# Source bash_aliases if it exists (for additional local customization)
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Enable bash completion
if ! shopt -oq posix; then
    if [ -f /usr/share/bash-completion/bash_completion ]; then
        . /usr/share/bash-completion/bash_completion
    elif [ -f /etc/bash_completion ]; then
        . /etc/bash_completion
    fi
fi


